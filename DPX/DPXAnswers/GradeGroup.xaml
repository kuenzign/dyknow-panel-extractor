<UserControl x:Class="DPXAnswers.GradeGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderThickness="1" BorderBrush="Gray">
        <DockPanel>
            <Label Name="LabelGroupName" FontWeight="Bold" FontSize="16" DockPanel.Dock="Top" />
            <DockPanel DockPanel.Dock="Top">
                <Button Name="ButtonGradeCorrect" DockPanel.Dock="Left" Margin="10" Width="100" Click="ButtonGradeCorrectClick">Correct</Button>
                <Button Name="ButtonGradeIncorrect" DockPanel.Dock="Right" Margin="10" Width="100" Click="ButtonGradeIncorrectClick">Inorrect</Button>
            </DockPanel>
            <StackPanel Name="StackPanelGrades" />
        </DockPanel>
    </Border>
</UserControl>