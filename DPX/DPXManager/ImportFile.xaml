<Page x:Class="DPXManager.ImportFile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ImportFile" Width="Auto" Height="Auto">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Label Height="28" Width="80">File Name</Label>
            <TextBox Height="23" Width="300" Name="textBoxSaveFileName" />
            <Button Height="23" Width="75" Click="Button_Click">Open File</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Height="23" Width="27" Name="buttonAddDate" Click="ButtonAddDate_Click">Add Date</Button>
            <ComboBox Name="comboBoxDates" Width="200"></ComboBox>
            <Button Height="23" Width="75" Name="buttonImport" Click="Button_Click_1">Import</Button>
        </StackPanel>
        <ScrollViewer>
            <Grid Height="Auto" Name="grid1" Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Page>