<Window x:Class="DPXManager.PanelPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PanelPreview" Height="450" Width="550">
    <ScrollViewer Name="scollViewerPanel" Width="Auto" Height="Auto" HorizontalScrollBarVisibility="Visible" Background="LightGray">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <InkCanvas Name="Inky" Width="1024" Height="768" HorizontalAlignment="Left" VerticalAlignment="Top">
                <InkCanvas.LayoutTransform>
                    <ScaleTransform ScaleX=".5" ScaleY=".5" />
                </InkCanvas.LayoutTransform>
            </InkCanvas>
        </Grid>
    </ScrollViewer>
</Window>