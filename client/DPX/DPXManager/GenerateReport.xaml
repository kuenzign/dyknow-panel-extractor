<Page x:Class="DPXManager.GenerateReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GenerateReport" >
    <DockPanel>
        <DockPanel HorizontalAlignment="Left" DockPanel.Dock="Left" Width="150">
            <Label VerticalAlignment="Top" DockPanel.Dock="Top" TextBlock.TextAlignment="Center" TextBlock.FontWeight="Bold">Dates for Report</Label>
            <Button Name="buttonGenerateReport" DockPanel.Dock="Bottom" Click="ButtonGenerateReport_Click">Generate Report</Button>
            <ListBox Name="listBoxDates" SelectionMode="Multiple"></ListBox>
        </DockPanel>
        <DockPanel>
            <Button Name="buttonSaveReport" DockPanel.Dock="Bottom" Width="200" Click="ButtonSaveReport">Save Report</Button>
            <RichTextBox Name="richTextBoxReport" ScrollViewer.VerticalScrollBarVisibility="Visible"></RichTextBox>
            
        </DockPanel>
    </DockPanel>
</Page>
